root = true

[*.{sh,bash,zsh}]
# Google's shell styleguide
# https://google.github.io/styleguide/shellguide.html
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# shfmt
binary_next_line = true
space_redirects = true
switch_case_indent = true
